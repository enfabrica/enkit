)

go_test(
    name = "licensedevice_test",
    srcs = ["plugin_test.go"],
    embed = [":licensedevice"],
    deps = [
        "@com_github_hashicorp_nomad//plugins/device",
        "@com_github_stretchr_testify//assert",
