)

go_test(
    name = "service_test",
    srcs = [
        "queue_test.go",
        "service_test.go",
    ],
    embed = [":service"],
    deps = [
        "//flextape/proto:go_default_library",
        "//lib/errdiff",
        "//lib/testutil",
        "@com_github_google_go_cmp//cmp",
        "@com_github_prashantv_gostub//:gostub",
