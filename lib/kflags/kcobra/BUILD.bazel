go_test(
    name = "kcobra_test",
    srcs = ["defaults_test.go"],
    embed = [":kcobra"],
    deps = [
        "//lib/kflags",
        "@com_github_spf13_cobra//:cobra",
        "@com_github_spf13_pflag//:pflag",
        "@com_github_stretchr_testify//assert",
    ],
)

alias(
    name = "go_default_library",
    actual = ":kcobra",
    visibility = ["//visibility:public"],
)
